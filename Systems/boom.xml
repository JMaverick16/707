<PropertyList>

    <filter>
        <type>gain</type>
        <gain>1.0</gain>

        <input>
            <expression>
                <difference>
                    <property>/sim/model/fuel-truck/line-heading-deg</property>
                    <value>180.0</value>
                </difference>
            </expression>
        </input>
        <output>
            <property>/engines/engine[9]/n1</property>
        </output>

        <min>-20.0</min>
        <max> 20.0</max>
    </filter>

    <filter>
        <type>gain</type>
        <gain>1.0</gain>

        <input>
            <property>/sim/model/fuel-truck/line-pitch-deg</property>
        </input>
        <output>
            <property>/engines/engine[9]/n2</property>
        </output>

        <min>-10.0</min>
        <max> 25.0</max>
    </filter>

    <filter>
        <type>gain</type>
        <gain>1.0</gain>

        <input>
            <property>/sim/model/fuel-truck/line-length</property>
        </input>
        <output>
            <property>/engines/engine[9]/rpm</property>
        </output>

        <min> 8.1</min>
        <max>12.9</max>
    </filter>

</PropertyList>
